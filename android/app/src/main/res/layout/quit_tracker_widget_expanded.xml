<?xml version="1.0" encoding="utf-8"?>
<!-- Vertical layout for 2x2+: text stacked, button at bottom -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_card_bg"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/widget_tracker_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am not"
        android:textSize="12sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeStepGranularity="1sp"
        android:textColor="#CCFFFFFF"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/widget_tracker_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Quit Tracker"
        android:textSize="14sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeStepGranularity="1sp"
        android:textStyle="bold"
        android:textColor="#CCFFFFFF"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/widget_tracker_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="for..."
        android:textSize="12sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeStepGranularity="1sp"
        android:textColor="#CCFFFFFF"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/widget_elapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0d 0h 0m"
        android:textSize="28sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="48sp"
        android:autoSizeStepGranularity="1sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Your addiction free streak"
        android:textSize="11sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeStepGranularity="1sp"
        android:textColor="#AAFFFFFF"
        android:maxLines="1"
        android:ellipsize="end" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="4dp" />

    <LinearLayout
        android:id="@+id/widget_right_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/widget_log_craving_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="Log craving"
            android:textSize="12sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeStepGranularity="1sp"
            android:textColor="#7C4DFF"
            android:background="@drawable/widget_chip_bg" />
    </LinearLayout>
</LinearLayout>
