<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_select_tracker"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/config_tracker_spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/config_include_craving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_include_craving"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/config_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_done" />
</LinearLayout>
